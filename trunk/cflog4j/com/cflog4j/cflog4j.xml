<?xml version="1.0" encoding="ISO-8859-1"?>
<cflog4j>
	<!-- location and name of the log4j.jar file. The program will search the jar file in current directory if no path is specified and will throw a cflog4j.log4j.InvalidPathToJar error. -->
	<log4jJar value="log4j-1.2.13.jar" />
	<!--  location and name of the cflog4j.properties file. By default the program checks the  -->
	<propertyFile value="cflog4j.properties" />
	<!-- Log4j will keep monitoring the property file for any changes every so manminutes, 
		and if the file changes, Log4j will update the configuration. -->
	<reloadConfigAfterMinutes value="100" />
</cflog4j>